<a class="btn-green" href="/drones/create">Create New Drone</a>
<h2>Available drones</h2> 
{{#each DroneFromDB}}
    <h3>Name: {{name}}</h3>
    <p>Propellers: {{propellers}}</p> 
    <p>Max Speed: {{maxSpeed}}</p>
    <div class="btn-wrapper">
      <a href="/drones/{{id}}/edit" class="btn-blue">Edit</a>
      <form action="/drones/{{id}}/delete" method="POST">
        <button class="btn-red">Delete</button>
      </form>
    </div>
{{/each}}